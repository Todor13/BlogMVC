@model Tuple<IEnumerable<Forum.Web.Areas.Users.Models.CommentActivityViewModel>, Forum.Web.Areas.Users.Models.AjaxPagerViewModel>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Thread</th>
                <th>Content</th>
                <th>Published</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model.Item1)
            {
                <tr>
                    <td>@Html.ActionLink(comment.ThreadTitle, "Index", "Thread", new { id = comment.ThreadId })</td>
                    <td>@comment.Content</td>
                    <td>@comment.Published</td>
                </tr>
            }
        </tbody>
    </table>
    @Html.Partial("_AjaxPager", Model.Item2)
</div>
