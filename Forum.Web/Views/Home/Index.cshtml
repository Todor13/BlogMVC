@model Forum.Web.Models.HomePageViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Newest Threads</h2>
        @foreach (var thread in Model.Newest)
        {
            <div>@Html.ActionLink(thread.Title, "Index", "Thread", new { id = thread.Id, title = thread.Title, Area = "Forum"}, null)</div>
        }
    </div>
    <div class="col-md-4">
        <h2>Most Discussed</h2>
        @foreach (var thread in Model.MostDiscussed)
        {
            <div>@Html.ActionLink(thread.Title, "Index", "Thread", new { id = thread.Id, title = thread.Title, Area = "Forum" }, null)</div>
        }
    </div>
    <div class="col-md-4">
        <h2>Important</h2>
        @foreach (var thread in Model.Important)
        {
            <div>@Html.ActionLink(thread.Title, "Index", "Thread", new { id = thread.Id, title = thread.Title, Area = "Forum" }, null)</div>
        }
    </div>
</div>